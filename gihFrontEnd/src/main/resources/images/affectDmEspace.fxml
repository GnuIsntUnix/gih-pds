<GridPane style="-fx-background-color: #D0E9C6;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="ma.uiass.eia.pds.gihFrontEnd.Serializers.DMJsonSerializer.AffecterDmEspaceController">
    <padding>
        <Insets bottom="20" left="40" right="40" top="20" />
    </padding>
    <columnConstraints>
        <ColumnConstraints minWidth="200.0" />
      <ColumnConstraints />
    </columnConstraints>

    <Label text="Espace:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="spaceComboBox" promptText="Sélectionnez un espace" style="-fx-background-color: #C2F4D8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Type de DM:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="typeComboBox" promptText="Sélectionnez un type de DM" style="-fx-background-color: #C2F4D8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="nameComboBox" promptText="Sélectionnez un nom de DM" style="-fx-background-color: #C2F4D8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Quantité:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="quantityTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button onAction="#assignDevice" style="-fx-background-color: #C2F4D8;" text="Affecter" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button style="-fx-background-color: #C2F4D8;" text="button" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <ListView fx:id="deviceListView" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <rowConstraints>
      <RowConstraints maxHeight="35.0" minHeight="30.0" prefHeight="35.0" />
      <RowConstraints maxHeight="44.0" minHeight="30.0" prefHeight="34.0" />
      <RowConstraints maxHeight="46.0" minHeight="27.0" prefHeight="33.0" />
      <RowConstraints maxHeight="55.0" minHeight="28.0" prefHeight="32.0" />
      <RowConstraints maxHeight="57.0" minHeight="18.0" prefHeight="47.0" />
      <RowConstraints maxHeight="395.0" minHeight="344.0" prefHeight="344.0" />
   </rowConstraints>

</GridPane>
